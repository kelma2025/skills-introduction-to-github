    <script>
        function calculateWealthCorner() {
            const degrees = document.getElementById('degrees').value;
            const door = document.getElementById('door').value;
            const resultDiv = document.getElementById('result');
            const locationSpan = document.getElementById('location');
            const tipsList = document.getElementById('tips');

            // 简化版财位计算逻辑
            let wealthDirection = "";
            let tips = [];

            if (door === 'east') {
                wealthDirection = "Southeast Corner";
                tips = ["Place a money plant", "Use purple cloth"];
            } else if (door === 'south') {
                wealthDirection = "Northwest Corner"; 
                tips = ["Add metal decor", "Keep area clean"];
            } else if (door === 'west') {
                wealthDirection = "Northeast Corner";
                tips = ["Display crystals", "Avoid clutter"];
            } else if (door === 'north') {
                wealthDirection = "Southwest Corner";
                tips = ["Use earth tones", "Add LED lighting"];
            }

            // 显示结果
            locationSpan.textContent = wealthDirection;
            tipsList.innerHTML = tips.map(tip => `<li>${tip}</li>`).join('');
            resultDiv.style.display = 'block';

            // 滚动到结果
            resultDiv.scrollIntoView({behavior: 'smooth'});
        }
    </script>
